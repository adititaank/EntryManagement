<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/visitor_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visitor Name:"
        />
    <TextView
        app:layout_constraintTop_toTopOf="@id/visitor_lable"
        app:layout_constraintBottom_toBottomOf="@id/visitor_lable"
        app:layout_constraintLeft_toRightOf="@id/visitor_lable"
        android:layout_marginStart="6dp"
        android:textSize="20sp"
        android:id="@+id/visitor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Visitor Name"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/visitor_lable"
        app:layout_constraintLeft_toLeftOf="@id/visitor_lable"
        android:layout_marginTop="2dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/host_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host Name:"
        />
    <TextView
        app:layout_constraintTop_toTopOf="@id/host_lable"
        app:layout_constraintBottom_toBottomOf="@id/host_lable"
        app:layout_constraintLeft_toRightOf="@id/host_lable"
        android:layout_marginStart="6dp"
        android:textSize="20sp"
        android:id="@+id/host_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Host Name"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/host_lable"
        app:layout_constraintLeft_toLeftOf="@id/visitor_lable"
        android:layout_marginTop="2dp"
        android:textSize="20sp"
        android:id="@+id/phone_lable"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        />
    <TextView
        app:layout_constraintTop_toTopOf="@id/phone_lable"
        app:layout_constraintBottom_toBottomOf="@id/phone_lable"
        app:layout_constraintLeft_toRightOf="@id/phone_lable"
        android:layout_marginStart="6dp"
        android:textSize="20sp"
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="88888888"
        />
    <Button
        android:id="@+id/check_out_button"
        app:layout_constraintTop_toTopOf="@id/phone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/phone"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Out"/>

    <View
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/check_out_button"
        android:background="@drawable/secondary_check"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>